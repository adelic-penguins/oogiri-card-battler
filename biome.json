{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"indentStyle": "tab",
		"ignore": []
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"nursery": {
				"useSortedClasses": "warn"
			},
			"correctness": {
				"noUnusedImports": "warn",
				"noUnusedVariables": "warn"
			},
			"style": {
				"useNodejsImportProtocol": "off",
				"noInferrableTypes": "off",
				"noNonNullAssertion": "off",
				"useEnumInitializers": "off",
				"useImportType": "off"
			},
			"suspicious": {
				"noExplicitAny": "off"
			}
		}
	},
	"css": {
		"formatter": {
			"enabled": true,
			"indentStyle": "tab",
			"indentWidth": 4
		},
		"linter": {
			"enabled": true
		},
		"parser": {
			"cssModules": true
		}
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"json": {
		"formatter": {
			"enabled": true,
			"indentStyle": "tab",
			"indentWidth": 4
		},
		"linter": {
			"enabled": true
		}
	}
}
